<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:clickable="true"
    android:id="@+id/rl_yue"
    android:padding="@dimen/padding"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_tuijianyigepengyou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/padding"
        android:src="@drawable/jinbi" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_centerVertical="true"
        android:id="@+id/tv_tianshu"
        android:layout_toRightOf="@id/iv_tuijianyigepengyou"
        android:layout_marginLeft="@dimen/padding"
        />


    <CheckBox
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:button="@drawable/typegouxuan_selector"
        android:id="@+id/cb_tianshu"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/padding" />

</RelativeLayout>

<View
android:layout_width="match_parent"
android:layout_height="1dp"
    />
</LinearLayout>