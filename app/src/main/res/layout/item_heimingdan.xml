<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="vertical"
    >


<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/mpadding"
    android:id="@+id/rl_hmditem"
    android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/logo"
            android:id="@+id/iv_touxiang"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_name"
            android:layout_toRightOf="@id/iv_touxiang"
            android:layout_marginLeft="@dimen/padding"/>


        <Button
            android:layout_width="73dp"
            android:layout_height="28dp"
            android:text="恢 复"
            android:id="@+id/bt_huifu"
            android:background="@drawable/framebuttongrayyj_bg"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textColor="#999999"
            android:layout_marginLeft="@dimen/padding"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/jianju"
            android:maxLines="1"
            android:ellipsize="end"
            android:id="@+id/tv_neirong"
            android:layout_toRightOf="@id/iv_touxiang"
            android:layout_below="@id/tv_name"
            android:layout_marginLeft="@dimen/padding"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/graybj"/>

</LinearLayout>
