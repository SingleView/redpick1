<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="70dp"
    android:padding="@dimen/padding"
    android:id="@+id/rl_xiaoxiitem">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rv_touxiang">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/jianju"
            android:src="@drawable/xitonggonggao"
            android:id="@+id/iv_touxiang"
            />



    </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/jianju"
            android:id="@+id/tv_name"
            android:layout_toRightOf="@id/rv_touxiang"
            android:layout_marginLeft="@dimen/toppadding"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_shijian"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/padding"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/jianju"
            android:maxLines="1"
            android:ellipsize="end"
            android:id="@+id/tv_neirong"
            android:layout_toRightOf="@id/rv_touxiang"
            android:layout_below="@id/tv_name"
            android:layout_marginLeft="@dimen/toppadding"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/graybj"/>

</LinearLayout>
