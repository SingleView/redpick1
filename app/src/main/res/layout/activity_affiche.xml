<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/rl_nomore">

        <ImageView

            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:src="@drawable/meiyougengduo"
            android:id="@+id/iv_lishi"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="抱歉,没有更多了"
            android:layout_below="@id/iv_lishi"
            android:textColor="@color/hintgray"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/bigpadding"/>

    </RelativeLayout>



    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_gonggao"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</RelativeLayout>