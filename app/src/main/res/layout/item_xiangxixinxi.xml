<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding"
        android:id="@+id/rl_xxxx">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/bigpadding"
            android:id="@+id/tv_rq"
            android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_yue"
        android:layout_marginLeft="@dimen/padding"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/tv_rq"
        android:textColor="@color/black"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:ellipsize="end"
            android:layout_marginLeft="@dimen/padding"
            android:layout_toRightOf="@id/iv_pt"
            android:id="@+id/tv_neirong"
            />


        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="80dp"
            android:src="@drawable/logo"
            android:scaleType="centerCrop"
            android:id="@+id/iv_pt"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_pt"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="@dimen/padding"
            android:orientation="horizontal">

            <CheckBox
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="match_parent"
                android:id="@+id/cb_renshu"
                android:button="@drawable/wodehaoyou"
                />

            <CheckBox
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="match_parent"
                android:id="@+id/cb_pinglun"
                android:button="@drawable/xiaoxi"
                />

            <CheckBox
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:id="@+id/cb_zan"
                android:layout_height="match_parent"
                android:button="@drawable/zan"
                />

        </LinearLayout>

</RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/graybj"/>

</LinearLayout>
