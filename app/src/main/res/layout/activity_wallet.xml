<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical"
        android:background="@color/red"
        android:padding="@dimen/padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账户余额(元)"
            android:layout_marginTop="@dimen/jianju"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/bigpadding"
            android:layout_marginTop="70dp"
            android:id="@+id/tv_yue"
            android:textStyle="bold"
            android:textColor="@color/white"
            />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:padding="@dimen/padding">

        <TextView
            android:id="@+id/tv_xyz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="幸运值" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/wenhao"
            android:scaleType="center"
            android:layout_toRightOf="@id/tv_xyz"
            android:layout_marginLeft="@dimen/jianju"
            android:id="@+id/iv_xyz"
            />

        <ImageView
            android:layout_width="300dp"
            android:layout_height="12dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/xinyunzhijdt"
            android:id="@+id/lv_xyzjdt"
            android:layout_marginTop="80dp"/>

        <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignLeft="@id/lv_xyzjdt"
             android:layout_marginTop="60dp"
             android:text="0"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/lv_xyzjdt"
            android:layout_marginTop="60dp"
            android:id="@+id/tv_xingyunzhi"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/lv_xyzjdt"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="@dimen/toppadding"
            android:text="低"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:text="中"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/lv_xyzjdt"
            android:layout_marginTop="100dp"
            android:layout_marginRight="@dimen/toppadding"
            android:text="高"/>


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/graybj">

        <Button
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:id="@+id/bt_tx"
            android:background="@drawable/button_bg"
            android:text="提      现"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp" />


    </RelativeLayout>


</LinearLayout>