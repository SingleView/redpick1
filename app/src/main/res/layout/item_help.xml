<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:id="@+id/rl_helpone"
        android:padding="15dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dengpao"
            android:layout_centerVertical="true"
            android:id="@+id/iv_helpone"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/iv_helpone"
            android:layout_marginLeft="15dp"
            android:id="@+id/tv_helpone"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:maxLines="1"
            android:id="@+id/tv_helponecontent"
            android:layout_below="@id/tv_helpone"
            android:layout_toRightOf="@id/iv_helpone"
            android:layout_marginLeft="15dp"
            android:ellipsize="end"
            />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/graybj"/>


</LinearLayout>
