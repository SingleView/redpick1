<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/graybj">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="@dimen/padding">

            <EditText
                android:layout_width="match_parent"
                android:hint="我想要对大家说...(最多400个字)"
                android:background="@null"
                android:focusable="true"
                android:id="@+id/et_hbnr"
                android:focusableInTouchMode="true"
                android:textColorHint="@color/hintgray"
                android:gravity="top|left"
                android:layout_height="90dp"/>

            <cn.bingoogolapple.photopicker.widget.BGASortableNinePhotoLayout
                android:id="@+id/snpl_moment_add_photos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:bga_snpl_deleteDrawable="@mipmap/bga_pp_ic_delete"
                app:bga_snpl_deleteDrawableOverlapQuarter="false"
                app:bga_snpl_editable="true"
                app:bga_snpl_itemCornerRadius="0dp"
                app:bga_snpl_itemSpanCount="3"
                app:bga_snpl_itemWhiteSpacing="10dp"
                app:bga_snpl_itemWidth="0dp"
                app:bga_snpl_maxItemCount="9"
                app:bga_snpl_otherWhiteSpacing="100dp"
                app:bga_snpl_placeholderDrawable="@mipmap/bga_pp_ic_holder_dark"
                app:bga_snpl_plusDrawable="@drawable/ic_add"
                app:bga_snpl_plusEnable="true"
                app:bga_snpl_sortable="true"/>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:padding="@dimen/padding"
            android:layout_height="45dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="红包分类"
                android:textColor="@color/black"/>


            <RelativeLayout
                android:layout_width="75dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:id="@+id/sp_hbfl"
                android:layout_alignParentRight="true">

                <TextView
                    android:id="@+id/tv_hbfl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:hint="请选择"
                    android:layout_centerVertical="true"
                    android:textColorHint="@color/hintgray"
                    android:singleLine="true"/>

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="8dp"
                    android:layout_alignRight="@id/tv_hbfl"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/jianju"
                    android:id="@+id/iv_hbfl"
                    android:src="@drawable/xiala"/>
            </RelativeLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:padding="@dimen/padding"
            android:layout_height="45dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="红包个数"
                android:textColor="@color/black"/>

            <EditText
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="14dp"
                android:background="@null"
                android:maxLines="1"
                android:hint="填写个数  "
                android:id="@+id/et_hbgs"
                android:inputType="number"
                android:gravity="right"
                android:textCursorDrawable="@null"
                android:layout_toLeftOf="@id/tv_geshu"
                android:textColorHint="@color/hintgray"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="个"
                android:id="@+id/tv_geshu"
                android:layout_marginRight="@dimen/jianju"
                android:textColor="@color/black"/>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:padding="@dimen/padding"
            android:layout_height="45dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="总金额"
                android:textColor="@color/black"/>

            <EditText
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:hint="填写金额  "
                android:textSize="14dp"
                android:maxLines="1"
                android:id="@+id/et_hbje"
                android:inputType="numberDecimal"
                android:gravity="right"
                android:textCursorDrawable="@null"
                android:layout_toLeftOf="@id/tv_jine"
                android:background="@null"
                android:textColorHint="@color/hintgray"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="元"
                android:id="@+id/tv_jine"
                android:layout_marginRight="@dimen/jianju"
                android:textColor="@color/black"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:padding="@dimen/padding"
            android:layout_height="45dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="发布对象"
                android:textColor="@color/black"/>

            <RelativeLayout
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:id="@+id/sp_fbdx"
                android:layout_alignParentRight="true">

                <TextView
                    android:id="@+id/tv_fbdx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:hint="     请选择"
                    android:layout_centerVertical="true"
                    android:textColorHint="@color/hintgray"
                    android:singleLine="true"/>

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="8dp"
                    android:layout_alignRight="@id/tv_fbdx"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/jianju"
                    android:id="@+id/iv_fbdx"
                    android:src="@drawable/xiala"/>
            </RelativeLayout>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white"
            android:padding="@dimen/padding"
            android:id="@+id/rl_xzwz">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="位置和范围"
                android:textColor="@color/black"/>


            <TextView
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:hint="请选择"
                android:maxLines="2"
                android:textColorHint="@color/hintgray"
                android:id="@+id/tv_weizi"
                android:gravity="right"
                android:textColor="#333333"/>

        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="5dp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:padding="@dimen/padding"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="链接标题"
                android:textColor="@color/black"/>

            <EditText
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:hint="请输入链接标题(最多30个字)"
                android:textSize="14dp"
                android:id="@+id/et_ljbt"
                android:background="@null"
                android:textColorHint="@color/hintgray"
                android:layout_alignParentRight="true"/>


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:padding="@dimen/padding"
            android:layout_height="45dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="链接地址"
                android:textColor="@color/black"/>

            <EditText
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:hint="请输入链接地址"
                android:id="@+id/et_ljdz"
                android:textSize="14dp"
                android:background="@null"
                android:textColorHint="@color/hintgray"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <Button
                android:layout_width="350dp"
                android:layout_centerInParent="true"
                android:layout_height="40dp"
                android:text="发  红  包"
                android:id="@+id/bt_fhb"
                android:textColor="@color/white"
                android:background="@drawable/button_bg"/>

        </RelativeLayout>

    </LinearLayout>

</ScrollView>
