<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="@dimen/jianju"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/rl_city"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/spin_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="点击选择地址"
                android:textColor="@color/black"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/bigpadding"
                android:layout_marginRight="@dimen/bigpadding" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="8dp"
                android:layout_alignRight="@id/spin_city"
                android:src="@drawable/shequliebiao_xiala"
                android:layout_centerVertical="true"
                />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/rl_fanwei"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/spin_fanwei"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="两公里内"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/bigpadding"
                android:layout_marginRight="@dimen/bigpadding" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="8dp"
                android:layout_alignRight="@id/spin_fanwei"
                android:src="@drawable/shequliebiao_xiala"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/padding"
                />

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.baidu.mapapi.map.MapView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/map_hbwz"
            />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/dingwei"
            android:scaleType="center"
            android:background="@drawable/button_bgw"
            android:id="@+id/bt_dingwei"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="120dp"
            android:layout_marginLeft="@dimen/bigpadding"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_50"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <Button
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:text="取   消"
                android:id="@+id/bt_qvxiao"
                android:textColor="@color/white"
                android:background="@drawable/button_bg"/>

            <Button
                android:layout_marginLeft="@dimen/dp_70"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:text="确   认"
                android:id="@+id/bt_queren"
                android:textColor="@color/white"
                android:background="@drawable/button_bg"/>

        </LinearLayout>

    </RelativeLayout>


</LinearLayout>