<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:id="@+id/popw"
        android:background="@color/graybj"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:padding="@dimen/padding">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:src="@drawable/shequ_dingwei"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/jianju"
                android:id="@+id/tv_chengshi" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="@dimen/padding"
            android:orientation="horizontal">


                <RelativeLayout
                    android:id="@+id/spin_province"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/padding"

                    android:layout_marginRight="@dimen/padding"
                    android:background="@drawable/framebuttongray_bg"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv_province"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="请选择"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="3dp"
                        android:paddingLeft="10dp"
                        android:textSize="15sp"
                        android:singleLine="true"/>

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_alignRight="@id/tv_province"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/jianju"
                        android:src="@drawable/xiala"/>
                </RelativeLayout>

            <RelativeLayout
                android:id="@+id/spin_city"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/padding"
                android:layout_marginRight="@dimen/padding"
                android:background="@drawable/framebuttongray_bg"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:hint="请选择"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="3dp"
                    android:textSize="15sp"
                    android:singleLine="true"/>

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_alignRight="@id/tv_city"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/jianju"
                    android:src="@drawable/xiala"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/spin_county"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/padding"
                android:layout_marginRight="@dimen/padding"
                android:background="@drawable/framebuttongray_bg"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_county"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:hint="请选择"
                    android:layout_centerVertical="true"
                    android:textSize="15sp"
                    android:singleLine="true"/>

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_alignRight="@id/tv_county"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/jianju"
                    android:src="@drawable/xiala"/>
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/graybj"
        />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rv_sheqv"/>

</LinearLayout>