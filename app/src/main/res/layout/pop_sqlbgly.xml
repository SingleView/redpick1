<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="110dp"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:clickable="true"
        android:id="@+id/pop_fat">

        <ImageView
            android:layout_marginTop="@dimen/jianju"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/jianju"
            android:layout_height="wrap_content"
            android:src="@drawable/fatie"/>

        <TextView
            android:layout_marginTop="@dimen/jianju"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   发帖"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/graybj"/>

    <LinearLayout
        android:layout_width="110dp"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:clickable="true"
        android:id="@+id/pop_ckjy">

        <ImageView
            android:layout_marginTop="@dimen/jianju"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/jianju"
            android:layout_height="wrap_content"
            android:src="@drawable/chakanjianyi"/>

        <TextView
            android:layout_marginTop="@dimen/jianju"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  查看建议"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/graybj"/>

    <LinearLayout
        android:layout_width="110dp"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:clickable="true"
        android:id="@+id/pop_fbgg">

        <ImageView
            android:layout_marginTop="@dimen/jianju"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/jianju"
            android:layout_height="wrap_content"
            android:src="@drawable/fabugonggao"/>

        <TextView
            android:layout_marginTop="@dimen/jianju"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   发布公告"/>

    </LinearLayout>

</LinearLayout>